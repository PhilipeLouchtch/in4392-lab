{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "rootDirs": [
      "./src",
      "./packages"
    ],
    "outDir": "./dist",
    "noImplicitAny": false,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "declaration": false,
    "listFiles": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": false
  },
  "exclude": [
    ".vscode",
    ".git",
    "node_modules",
    "spec",
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}